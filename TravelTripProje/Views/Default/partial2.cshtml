@using TravelTripProje.Models.Sınıflar
@model List<Blog>

@foreach(var x in Model)
{ 
    <div class="right">
       <div class="bot-left">
           <img src="@x.BlogImage"style="width:250px;height:150px" alt="" />
       </div>
       <div class="left-text">


           <h4>@x.Baslik</h4>
           <span class="doller">@x.Tarih.ToString("dd.MM.yyyy")</span>
           <p>
               @{
               if(x.Aciklama.Length > 50)
               {
               x.Aciklama.Substring(0, 50);
               }
               else
               {
               @x.Aciklama;
               }


               }
           </p>
           <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">devamını oku >></span></a></p>
       </div>
    </div>  
 }
 